<div class="row">
  <div class="col d-flex justify-content-center">
    <h3>Number of Groups</h3>
  </div>
  <div class="col-1 d-flex justify-content-center">
    <h3>or</h3>
  </div>
  <div class="col d-flex justify-content-center">
    <h3>Maximum Group Size</h3>
  </div>
</div>
<div class="row">
  <div class="col d-flex justify-content-center">
    <form action="/<%=groupId%>/create-num-groups" method="get">
      <div class="form-group">
        <input type="range" name="inputNumGroups" id="inputNumGroupsId" value="10" min="1" max="20" oninput="outputNumGroupsId.value = inputNumGroupsId.value">
        <output name="outputNumGroups" id="outputNumGroupsId">10</output>
      </div>
      <div class="form-group text-center">
        <input type="submit" class="btn btn-primary text-center"></input>
      </div>
    </form>
  </div>

  <div class="col d-flex justify-content-center">
    <form action="/<%=groupId%>/create-max-group" method="get">
      <div class="form-group">
        <input type="range" name="inputMaxGroup" id="inputMaxGroupId" value="10" min="1" max="20" oninput="outputMaxGroupId.value = inputMaxGroupId.value">
        <output name="outputMaxGroup" id="outputMaxGroupId">10</output>
      </div>
      <div class="form-group text-center">
        <input type="submit" class="btn btn-primary text-center"></input>
      </div>
    </form>
  </div>
