<%- include('partials/header') %>
<%- include('partials/navigation') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-hat-wizard fa-3x"></i>
    <h1 class="display-5">Create Grouping</h1>
    <hr>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <h3>Number of Groups</h3>
    </div>
    <div class="col-1 d-flex justify-content-center">
      <h3>or</h3>
    </div>
    <div class="col d-flex justify-content-center">
      <h3>Maximum Group Size</h3>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <form action="/<%=groupId%>/create-num-groups" method="get">
        <div class="form-group">
          <input type="range" name="inputNumGroups" id="inputNumGroupsId" value="5" min="1" max="10" oninput="outputNumGroupsId.value = inputNumGroupsId.value">
          <output name="outputNumGroups" id="outputNumGroupsId">5</output>
        </div>
        <div class="form-group text-center">
          <input type="submit" class="btn btn-primary text-center"></input>
        </div>
      </form>
    </div>

    <div class="col d-flex justify-content-center">
      <form action="/<%=groupId%>/create-max-group" method="get">
        <div class="form-group">
          <input type="range" name="inputMaxGroup" id="inputMaxGroupId" value="5" min="1" max="10" oninput="outputMaxGroupId.value = inputMaxGroupId.value">
          <output name="outputMaxGroup" id="outputMaxGroupId">5</output>
        </div>
        <div class="form-group text-center">
          <input type="submit" class="btn btn-primary text-center"></input>
        </div>
      </form>
    </div>
</div>

<%- include('partials/footer') %>
